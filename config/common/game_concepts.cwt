types = {
    type[game_concept] = {
        path = "game/common/game_concepts"
        path_extension = .txt
        localisation = {
            ## required
            name = "$"
        }
    }
}

game_concept = {
    ## cardinality = 0..1
    texture = filepath

    ## cardinality = 0..1
    is_loading_tip = bool

    ## cardinality = 0..1
    tutorial_lesson = <tutorial_lesson>
}
